<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="#FFFFFF"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/image_restaurant_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/content_desc_restaurant_logo"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/textview_restaurant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/image_restaurant_logo"
        android:text="a;fja;f"
        android:textColor="#000000"
        android:textStyle="bold" />

    <RatingBar
        android:id="@+id/ratingbar_restaurant_rating"
        style="@style/starRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_restaurant_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/image_restaurant_logo"
        android:numStars="5"
        android:rating="3.5" />

    <TextView
        android:id="@+id/textview_restaurant_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ratingbar_restaurant_rating"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/image_restaurant_logo"
        android:text="a;fja;f"
        android:textColor="#000000" />

</RelativeLayout>